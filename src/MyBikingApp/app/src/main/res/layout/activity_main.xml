<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".MainActivity">

    <TextView
            android:text="s"
            android:layout_width="56dp"
            android:layout_height="72dp" android:id="@+id/textView6"
            android:textSize="60sp"
            app:layout_constraintStart_toEndOf="@+id/tv_time" android:layout_marginStart="12dp"
            app:layout_constraintTop_toBottomOf="@+id/textView5"/>
    <TextView
            android:text="m"
            android:layout_width="56dp"
            android:layout_height="72dp" android:id="@+id/textView5"
            android:textSize="60sp" android:textColor="#2196F3"
            app:layout_constraintStart_toEndOf="@+id/distanceValue" android:layout_marginStart="4dp"
            app:layout_constraintTop_toBottomOf="@+id/rotateYVal" android:layout_marginTop="40dp"/>

    <TextView
            android:id="@+id/tv_speed"
            android:layout_width="67dp"
            android:layout_height="39dp"
            android:text="0.00"
            tools:layout_editor_absoluteY="13dp"
            android:textSize="30sp" android:paddingRight="0dp" app:layout_constraintEnd_toStartOf="@+id/tv_speedUnit"
    />
    <TextView
            android:text="0.00"
            android:layout_width="184dp"
            android:layout_height="71dp" android:id="@+id/distanceValue"
            android:textColor="#2196F3"
            android:textAlignment="center" android:textSize="60sp"
            app:layout_constraintTop_toBottomOf="@+id/rotateYVal" android:layout_marginTop="40dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.352"/>
    <TextView
            android:text="Wheelie Off"
            android:layout_width="364dp"
            android:layout_height="68dp" android:id="@+id/rotateYVal"
            android:textSize="48sp"
            app:layout_constraintTop_toBottomOf="@+id/tv_speed" android:layout_marginTop="44dp"
            android:textAlignment="center" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    <Button
            android:text="Start"
            android:layout_width="163dp"
            android:layout_height="84dp" android:id="@+id/btnStart"
            android:backgroundTint="@color/button_background_color"
            app:layout_constraintTop_toBottomOf="@+id/tv_lastWheeleTime" android:layout_marginTop="12dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="0.00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/tv_totalWheelieDistance"
            tools:layout_editor_absoluteX="59dp" app:layout_constraintTop_toBottomOf="@+id/tv_lastWheeleDistance"
            android:layout_marginTop="36dp"/>
    <TextView
            android:text="0.00"
            android:layout_width="167dp"
            android:layout_height="67dp" android:id="@+id/tv_time"
            android:textAlignment="center"
            android:textColorHint="#2196F3" android:textSize="60sp"
            app:layout_constraintTop_toBottomOf="@+id/distanceValue" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.356"/>
    <TextView
            android:text="0.00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/tv_lastWheeleTime"
            app:layout_constraintTop_toBottomOf="@+id/tv_totalWheelieDistance"
            android:layout_marginTop="24dp" tools:layout_editor_absoluteX="59dp"/>
    <TextView
            android:text="km/h"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/tv_speedUnit"
            android:textSize="30sp"
            app:layout_constraintBottom_toTopOf="@+id/rotateYVal" android:layout_marginBottom="44dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/tv_lastWheeleDistance"
            tools:layout_editor_absoluteX="57dp" app:layout_constraintTop_toBottomOf="@+id/tv_time"
            android:layout_marginTop="28dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>