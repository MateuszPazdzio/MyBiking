@model MyBiking.Application.Dtos.RideDto


<h1 class="d-flex justify-content-center">Create a ride</h1>

<div class="row d-flex justify-content-center">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
@*             <div class="form-group">
                <label asp-for="BikeId" class="control-label"></label>
                <input value="1" asp-for="BikeId" class="form-control" />
                <span asp-validation-for="BikeId" class="text-danger"></span>
            </div> *@
            <div class="form-group">
                <label asp-for="StartingDateTime" class="control-label"></label>
                <input value="@DateTime.Now.ToString("yyyy-MM-ddTHH:mm")" asp-for="StartingDateTime" class="form-control" />
                <span asp-validation-for="StartingDateTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndingDateTime" class="control-label"></label>
                <input value="@DateTime.Now.AddHours(1).ToString("yyyy-MM-ddTHH:mm")" asp-for="EndingDateTime" class="form-control" />
                <span asp-validation-for="EndingDateTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Distance" class="control-label"></label>
                <input value = "0.00" asp-for="Distance" class="form-control" />
                <span asp-validation-for="Distance" class="text-danger"></span>
            </div>
            <div class="form-group form-check mt-2">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsPublic" /> @Html.DisplayNameFor(model => model.IsPublic)
                </label>
            </div>
            <div class="form-group mt-3 d-flex flex-row justify-content-between">
                <input type="submit" value="Create" class="btn btn-primary" />
                <div>
                    <a asp-action="Index">List of rides</a>
                </div>
            </div>
        </form>

    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
